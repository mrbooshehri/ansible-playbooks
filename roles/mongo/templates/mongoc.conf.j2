# log
systemLog:
 destination: file
 logAppend: true
 logRotate: rename
 path: /var/log/mongodb/mongod.log
# data
storage:
 dbPath: {{ mongo.data }}
 journal:
  enabled: true
# process
processManagement:
 fork: true 
# fork and run in background
 pidFilePath: /var/run/mongodb/mongod.pid
 timeZoneInfo: /usr/share/zoneinfo
# network Interface and port
net:
 port: 27017
 bindIp: {{ ansible_default_ipv4.address }}
#security:
# authorization: enabled
# keyFile: /data/mongodb.key
# replica_name , you can use any desired name.
replication:
 replSetName: "replconfig01"
# role in the cluster. This will define whether it's a config server # or a shard server, in config servers choose "configsvr".
sharding:
 clusterRole: "configsvr"
